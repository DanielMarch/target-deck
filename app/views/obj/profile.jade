extends ../shared/template

block content
  .container
    .row.clearfix
        .col-md-12.column
          nav.navbar.navbar-default.navbar-inverse.navbar-fixed-top(role='navigation')
            .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand Target Deck
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
              ul.nav.navbar-nav.navbar-right
                li
                  a(href='javascript:history.go(-1)') Go Back
                li
                  a(href='/logout') Logout
      .row.clearfix
        .col-md-12.column#buffer
          .page-header
            h1
              small #{obj.objname}
      .row.clearfix
        .col-md-4.column
          .profile-picture(style="background-image:url('#{obj.profilePic[0].file}')")
        .col-md-4.column
          dl
            dt
              | Priority
            dd
              | #{obj.priority}
            dt
              | Operation
            dd
              | #{op.name}
            dt
              | Unit
            dd
              | #{org.name}
            dt
              | POC
            dd
              | #{org.poc}
            dt
              | POC Email
            dd
              | #{org.email}
            dt
              | POC DSN
            dd
              | #{org.dsn}
        .col-md-4.column
          each report in obj.reports
            a.btn(href='#{report.file}', target='_blank')= report.name
      .row.clearfix
        .col-md-12.column
          .page-header
            h1
              small Imagery
      .row.clearfix
        each photo in obj.imagery
          .col-md-3.column.project
            a(href="#{photo.file}", data-lightbox='image-1')
              img.imagery(src="#{photo.file}")
