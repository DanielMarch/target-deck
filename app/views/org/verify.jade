extends ../shared/template

block content
  .container
    .row.clearfix
      .col-md-12.column
        nav.navbar.navbar-default.navbar-fixed-top.navbar-inverse(role='navigation')
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') Target Deck
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='/about') About
            ul.nav.navbar-nav.navbar-right
              li
                a(href='/register') Register Organization
              if(!user)
                li
                  a(href='/dash') Login
              if(user)
                li
                  a(href='/logout') Logout
      .row.clearfix#buffer
        .col-md-4.column
        .col-md-4.column
          .page-header
            h1
              small Input Organization Information
          form(method='post', action='/verify/' + o._id, enctype='multipart/form-data')
            .form-group
              label Password
              input.form-control(type='password', name='password', autofocus=true, placeholder='Enter Password', required='required')
            .form-group
              label Organization Name
              input.form-control(type='text', name='name', autofocus=true, placeholder='Enter Organization Name', required='required')
            .form-group
              label DSN
              input.form-control(type='text', name='dsn', autofocus=true, placeholder='Enter DSN Number', required='required')
            .form-group
              label POC
              input.form-control(type='text', name='poc', autofocus=true, placeholder='Enter Point of Contact', required='required')
            .form-group
              label Organization Logo
              input(type='file', name='logo')
            button.btn.btn-default Finalize Organization
        .col-md-4.column
