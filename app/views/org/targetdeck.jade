extends ../shared/template

block content
  .container
    .row.clearfix
      .col-md-12.column
        nav.navbar.navbar-default.navbar-fixed-top.navbar-inverse(role='navigation')
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/portal') Target Deck
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='/portal') Home
              li
                a(href='/manage') Members
              li
                a(href='/ops') Operations
              li.active
                a(href='/targetdeck') Target Deck
            ul.nav.navbar-nav.navbar-right
              if(!user)
                li
                  a(href='/dash') Login
              if(user)
                li
                  a(href='/logout') Logout
  h1= title
  table
    thead
      tr
        th
          | Objective Photo
        th
          | Priority
        th
          | Operation
        th
          | Objective Name
        th
          | Status
    tbody
      each obj in objs
        - var opIndex = _.findIndex(ops,{'_id': obj.opId})
        tr
          td
            a(href='/obj/#{obj._id}')
              each pic in obj.profilePic
                .photo(style="background-image:url('#{pic.file}')")
          td= obj.priority
          td= ops[opIndex].name
          td= obj.objname
          td= obj.status
